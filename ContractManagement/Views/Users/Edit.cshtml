@using ContractManagement_Deep.ViewModels
<!-- Views/Users/Edit.cshtml -->
@model EditUserViewModel

<h2>ویرایش کاربر</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))" class="form-control">
            <option value="">-- انتخاب کنید --</option>
        </select>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsDepartmentManager" class="form-check-input" />
        <label asp-for="IsDepartmentManager" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label>نقش‌های کاربر</label>
        <div>
            @foreach (var role in (List<string>)ViewBag.AllRoles)
            {
                <div class="form-check">
                    <input name="Roles" class="form-check-input" type="checkbox" value="@role" @(Model.Roles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                    @* <input type="checkbox" name="roles" value="@role.Name"
                    @(ViewBag.UserRoles.Contains(role.Name) ? "checked" : "") />
                    <label class="form-check-label">@role.Name</label> *@
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
</form>