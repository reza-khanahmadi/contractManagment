@model IEnumerable<Core.Models.Contract>
@{
    ViewData["Title"] = "قراردادهای نیازمند تأیید";
}

<div class="card">
    <div class="card-header bg-warning text-white">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">هیچ قرارداد در انتظار تأیید وجود ندارد.</div>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>عنوان</th>
                        <th>واحد مربوطه</th>
                        <th>سازنده</th>
                        <th>تاریخ ایجاد</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contract in Model)
                    {
                        <tr>
                            <td>@contract.Title</td>
                            <td>@contract.Department?.Name</td>
                            <td>@contract.CreatedBy?.FullName</td>
                            <td>@contract.CreatedDate.ToString("yyyy/MM/dd")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@contract.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> مشاهده
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>